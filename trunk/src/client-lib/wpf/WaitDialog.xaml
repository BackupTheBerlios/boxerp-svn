<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Boxerp.Client.WPF.WaitDialog"
    Title="Operation in Progress" Height="147" Width="300"
    >
    <Grid>
        
    	<ProgressBar Margin="8,36,8,55" x:Name="_progressBar" IsIndeterminate="True"/>
    	<Label Margin="8,8,8,0" VerticalAlignment="Top" Height="24" Content="Please Wait..."/>
    	<Button Click="OnCancel" Margin="87,0,85,18" x:Name="_cancelButton" VerticalAlignment="Bottom" Height="24" Content="Cancel"/>
        
    </Grid>
</Window>
