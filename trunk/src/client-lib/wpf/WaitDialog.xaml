<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Boxerp.Client.WPF.WaitDialog"
    Title="Operation in Progress" Height="147" Width="300"
    ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen"
    >
    <Grid>
        
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="0.264*"/>
    		<ColumnDefinition Width="0.736*"/>
    	</Grid.ColumnDefinitions>
        
    	<ProgressBar Margin="8,36,8,55" x:Name="_progressBar" IsIndeterminate="True" Grid.ColumnSpan="2"/>
    	<Label Margin="8,8,8,0" VerticalAlignment="Top" Height="24" Content="Please Wait..." Grid.ColumnSpan="2"/>
    	<Button Click="OnCancel" Margin="10,0,85,18" x:Name="_cancelButton" VerticalAlignment="Bottom" Height="24" Content="Cancel" Grid.Column="1"/>
        
    </Grid>
</Window>
