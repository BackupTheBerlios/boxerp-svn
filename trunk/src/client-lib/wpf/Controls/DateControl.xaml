    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="Boxerp.Client.WPF.Controls.DateControl"
    Width="224" Height="23">
	<UserControl.Resources>
		 <XmlDataProvider x:Key="days">
			<x:XData>
				<Days xmlns="">
					<Day>1</Day>
<Day>2</Day>
<Day>3</Day>
<Day>4</Day>
